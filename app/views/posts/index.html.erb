<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% @fresh_tweets.each do |tweet| %>
        <div class="panel panel-default post">
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-1">
                <%= image_tag tweet[:user_image], class: "img img-40" %>
              </div>
              <div class="col-xs-11">
                <p class="influencer-link">
                  <%= link_to tweet[:user_name], "#" %>
                  <%= time_ago_in_words(tweet[:created_at]) + " ago" %>
                </p>
                <%= simple_format tweet[:content].html_safe %>
                <% if tweet[:href] %>
                  <% page = MetaInspector.new(tweet[:href]) %>
                  <%= image_tag page.images.best, class: "img total-width" %>
                  <h4><%= page.best_title %></h4>
                  <p><%= page.description %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>