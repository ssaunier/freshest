<div class="navigation-bar">
  <div class="layout-container">
    <%= link_to root_path, class: 'brand-link' do %>
      <div class="brand">
        <div class="logo">
          <span>Freshest</span>
        </div>
        <div class='slogan'>
          Short-lived fresh news from the modern Web
        </div>
      </div>
    <% end %>
    <div class="bar-right pull-right">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= react_component("ModalInfluencer") %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <%= image_tag current_user.picture, { class: "avatar-user" } %>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
            </ul>
          </li>
        </ul>
      <% else %>
      <%= react_component("ModalConnect", {
        href: user_omniauth_authorize_path(:twitter),
        last_influencers_images: @influencers[0..4].map {|influencer| influencer.avatar_url}
        }) %>
      <% end %>
    </div>
  </div>
</div>