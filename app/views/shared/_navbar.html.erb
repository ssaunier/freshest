<header>
  <%= render "shared/flashes" %>
  <div class="navigation-bar">
    <div class="container">
      <%= link_to root_path, class: 'brand-link' do %>
        <div class="brand">
          <div class="pull-left">
            <span class='miniature'>
              <span>F</span>
            </span>
          </div>
          <div class="pull-left">
            <div class="logo hidden-xs">
              <span>Freshest</span>
            </div>
            <div class='slogan hidden-xs'>
              Latest stuff from your sources
            </div>
          </div>
        </div>
      <% end %>
      <div class="bar-right">
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown pull-right">
              <a href="#" class="dropdown-toggle margin-top-4" data-toggle="dropdown" role="button" aria-expanded="false">
                <%= image_tag current_user.picture, { class: "avatar-user" } %>
              </a>
              <ul class="dropdown-menu hidden-xs" role="menu">
                <div class='popover-arrow'></div>

                <li class="pull-right"><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
              </ul>
            </li>
            <li class="pull-right">
              <%= react_component("CallToAction", {
                userSignedIn: user_signed_in?
                }) %>
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li class="pull-right">
              <%= react_component("CallToAction", {
                userSignedIn: user_signed_in?
                }) %>
            </li>
            <li class="pull-right">
              <%= link_to "Sign in", user_omniauth_authorize_path(:twitter), class: 'sign-in' %>
            </li>
        <% end %>
      </div>
    </div>
  </div>
  <div class='sub-navigation-bar'>
    <div class="container">
      <%= link_to 'Read Stuff', root_path, class: 'reading-list-link' %>
      <%= link_to 'Sources', sources_path, class: 'dashboard-link' %>
      <%= link_to 'About', about_path, class: 'about-link' %>
    </div>
  </div>
</header>